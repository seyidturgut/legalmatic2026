generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("USER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  drafts        ContractDraft[]
  contracts     UserContract[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id             String   @id @default(uuid())
  title          String
  description    String   @db.Text
  price          Float
  slug           String   @unique
  category       String
  details        Json?    // Stores rich content: intro, usage, scope, faq, etc.
  templateSchema String   @db.Text
  htmlContent    String?  @db.Text
  image          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  orders         Order[]
  drafts         ContractDraft[]
  contracts      UserContract[]
  legislations   Legislation[] @relation("ProductLegislations")
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  productId String
  amount    Float
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ContractDraft {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  answers     String   @db.Text // JSON string of answers
  currentStep Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId]) // One draft per product per user
}


model UserContract {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  answers     String   @db.Text // Final snapshot of answers
  createdAt   DateTime @default(now())
  status      String   @default("COMPLETED")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Legislation {
  id          String   @id @default(cuid())
  title       String
  type        String   @default("Kanun") // Kanun, Yönetmelik, Tebliğ, KHK
  referenceNo String?
  slug        String   @unique
  publishDate DateTime?
  summary     String?  @db.Text
  content     String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products    Product[] @relation("ProductLegislations")
}
